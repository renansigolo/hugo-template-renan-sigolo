  "main": "index.html",
  "scripts": {
    "build": "hugo",
    "clean": "rm -rf .firebase $TMPDIR/hugo_cache/ dist node_modules package-lock.json resources",
    "deploy": "npm run build && firebase deploy",
    "fix": "npm run lint:js -- --fix && npm run lint:style -- --fix",
    "format": "prettier '**/*' --write --ignore-unknown",
    "lint:js": "eslint 'assets/js/**/*.js'",
    "lint:style": "stylelint 'assets/**/*.{scss,css}'",
    "postinstall": "scripts/setup-hooks.sh",
    "preview": "npx serve dist",
    "start": "hugo serve -D",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "6.2.0",
    "modern-normalize": "1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@commitlint/prompt-cli": "17.1.2",
    "eslint": "8.24.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "prettier": "2.7.1",
    "prettier-plugin-go-template": "0.0.13",
    "stylelint": "14.12.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-recommended-scss": "7.0.0",
    "stylelint-config-sass-guidelines": "9.0.1"
  }
}
