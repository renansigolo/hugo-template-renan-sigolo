{
  "name": "hugo-template-renan-sigolo",
  "version": "1.0.0",
  "description": "Hugo Template Renan Sigolo",
  "keywords": ["template","static","site","generator","hugo"],
  "author": "Renan Sigolo <renan.sigolo@gmail.com>",
  "license": "MIT",
  "main": "index.html",
  "scripts": {
    "build": "hugo",
    "clean": "rm -rf package-lock.json node_modules $TMPDIR/hugo_cache/",
    "deploy": "npm run build && firebase deploy",
    "format": "prettier '**/*' --write --ignore-unknown",
    "lint:scss": "stylelint 'assets/sass/**/*.scss' --fix",
    "start": "hugo serve -D",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "6.2.0",
    "modern-normalize": "1.1.0"
  },
  "devDependencies": {
    "prettier": "2.7.1",
    "prettier-plugin-go-template": "0.0.13",
    "stylelint": "14.12.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-sass-guidelines": "9.0.1"
  }
}
